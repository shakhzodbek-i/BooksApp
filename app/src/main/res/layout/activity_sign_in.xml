<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_page"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp">

    <ImageView
        android:id="@+id/new_logo"
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:src="@drawable/logo_new1"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </ImageView>

    <EditText
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/new_logo"
        android:layout_alignParentRight="true"
        android:background="@drawable/edit_text"
        android:fontFamily="@font/work_sans_semibold"
        android:hint="@string/login"
        android:inputType="text"
        android:layout_marginTop="70dp"
        android:paddingLeft="30dp"
        android:singleLine="true"
        android:textAllCaps="false"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@id/new_logo"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/login"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/login"
        android:fontFamily="@font/work_sans_semibold"
        android:inputType="textPassword"
        android:background="@drawable/edit_text"
        android:textAllCaps="false"
        android:paddingLeft="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:hint="@string/password"
        android:layout_alignParentRight="true"
        android:singleLine="true"/>

    <Button
        android:id="@+id/enter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password"
        android:layout_marginTop="60dp"
        android:layout_width="116dp"
        android:layout_height="37dp"
        android:layout_below="@+id/confirm_pass"
        android:background="@drawable/btn_background_solid"
        android:fontFamily="@font/work_sans_semibold"
        android:text="@string/enter_btn"
        android:textAllCaps="false"
        android:textColor="@color/btn_color"
        android:textSize="18sp"/>

    <TextView android:id="@+id/link_signup"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/forgot_password"
        android:layout_below="@id/enter"
        app:layout_constraintTop_toBottomOf="@id/enter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/colorWhite"
        android:textAlignment="center"
        android:textIsSelectable="true"
        android:textSize="18sp" />


</android.support.constraint.ConstraintLayout>