<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_page"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp">

    <ImageView
        android:id="@+id/new_logo"
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:layout_marginTop="72dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/Constraint"
        android:layout_height="182dp"
        app:layout_constraintTop_toBottomOf="@+id/new_logo"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/prif_pic"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/user"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/username"
            android:layout_width="200dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:text="Name Display Here"
            android:textColor="@color/colorText"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/prif_pic"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/useremail"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:text="Email Display Here"
            android:textColor="@color/colorText"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/prif_pic"
            app:layout_constraintTop_toBottomOf="@+id/username" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="28dp"
            android:background="@drawable/btn_background_solid"
            android:text="LogOut"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/prif_pic"
            app:layout_constraintTop_toBottomOf="@+id/useremail" />

    </android.support.constraint.ConstraintLayout>

    <com.google.android.gms.common.SignInButton
        android:layout_width="match_parent"
        android:id="@+id/google_log_in"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </com.google.android.gms.common.SignInButton>







</android.support.constraint.ConstraintLayout>