<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_page"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout

    android:id="@+id/Constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:ignore="ExtraText">

    <ImageView
        android:contentDescription="@string/content_descriptor"
        android:id="@+id/new_logo"
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:src="@drawable/ic_logo"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toTopOf="@id/full_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <EditText
        android:id="@+id/full_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/new_logo"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/work_sans_semibold"
        android:background="@drawable/edit_text"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/ic_user"
        android:drawablePadding="8dp"
        android:textSize="18sp"
        android:hint="@string/full_name"
        android:textColorHint="@color/colorText"
        android:paddingLeft="30dp"
        android:drawableRight="@drawable/ic_error"
        android:paddingRight="30dp"
        android:inputType="text"
        android:textColor="@color/colorText"
        android:singleLine="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@id/new_logo"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/ic_email"
        android:layout_height="50dp"
        android:layout_below="@+id/full_name"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/edit_text"
        android:fontFamily="@font/work_sans_semibold"
        android:hint="@string/email"
        android:textColorHint="@color/colorText"
        android:drawableRight="@drawable/ic_error"
        android:paddingRight="30dp"
        android:inputType="textEmailAddress"
        android:paddingLeft="30dp"
        android:drawablePadding="8dp"
        android:singleLine="true"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/full_name"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/email"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text"
        android:fontFamily="@font/work_sans_semibold"
        android:drawableRight="@drawable/ic_error"
        android:paddingRight="30dp"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:layout_marginBottom="25dp"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/ic_password"
        android:textColorHint="@color/colorText"
        android:paddingLeft="30dp"
        android:singleLine="true"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@id/email"/>

    <EditText
        android:id="@+id/confirm_pass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/password"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="35dp"
        app:layout_constraintTop_toBottomOf="@id/password"
        android:fontFamily="@font/work_sans_semibold"
        android:drawableRight="@drawable/ic_error"
        android:paddingRight="30dp"
        android:inputType="textPassword"
        android:background="@drawable/edit_text"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="8dp"
        android:textColorHint="@color/colorText"
        android:textAllCaps="false"
        android:paddingLeft="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        android:hint="@string/confirm_password"
        android:singleLine="true"/>

    <Button
        android:id="@+id/enter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirm_pass"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:layout_width="180dp"
        android:layout_height="41dp"
        android:layout_below="@+id/confirm_pass"
        android:background="@drawable/btn_background_solid"
        android:fontFamily="@font/work_sans_semibold"
        android:text="@string/register_btn"
        android:textAllCaps="false"
        android:textColor="@color/btn_color"
        android:textSize="20sp"/>

</android.support.constraint.ConstraintLayout>
</ScrollView>

